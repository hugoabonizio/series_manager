<div class="row">
	<div class="col s5">
		<div class="card">
			<div class="card-image">
				<img src="<%= @serie.poster %>">
				<span class="card-title"></span>
			</div>
			<div class="card-content">
				<span class="card-title activator grey-text text-darken-4"><%= @serie.original_title %> (<%= @serie.title %>)</span>
				<a href="#" class="btn-large btn-floating red lighten-3 right" style="margin: 10px;">
					<i class="mdi-action-favorite-outline"></i>
				</a>
			</div>
		</div>
	</div>
	<div class="col s7">
		<table class="bordered">
			<thead>
				<tr>
					<th>Temporada</th>
					<th>Episódio</th>
					<th>Título</th>
				</tr>
			</thead>
			<% @serie.episodes.each do |ep| %>
				<tr>
					<td><%= ep.season %></td>
					<td><%= ep.episode %></td>
					<td><%= ep.title %></td>
				</tr>
			<% end %>
		</table>
	</div>
</div>