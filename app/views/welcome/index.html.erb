<div class="row">
	<div class="col s12 center-align">
		<% if user_signed_in? %>
			<form>
				<div class="input-field col s12">
          <input placeholder="Procurar..." id="search" type="text" style="padding: 20px; margin-bottom: 40px; font-size: 40px;">
        </div>
			</form>
		<% else %>
			<h1>Administre suas sÃ©ries</h1>
			<%= link_to user_omniauth_authorize_path(:facebook) do %>
				<button class="btn-large waves-effect waves-light">
					Entrar <i class="mdi-content-send right"></i>
				</button>
			<% end %>
		<% end %>
		<br><br><br>
	</div>
</div>
<div class="row">
	<% @series.each do |serie| %>
		<div class="col s3">
			<div class="card">
				<div class="card-image">
					<%= link_to serie do %>
						<img src="<%= serie.poster %>">
						<span class="card-title"><%= serie.original_title %></span>
					<% end %>
				</div>
				<div class="card-content">
					<span class="card-title grey-text text-darken-4"><%= serie.title %></span>
				</div>
			</div>
		</div>
	<% end %>
</div>